generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name     String
  username String
  email    String @unique
  password String

  rejections Rejection[]
}

model Rejection {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    Int
  title     String
  content   String
  emailId   String?
  sender    String?
  timestamp DateTime?
  reason    String?

  user User @relation(fields: [userId], references: [id])
}
